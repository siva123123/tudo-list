<html>
<head>
    <title>
        <%= tittle%>
    </title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">

</head>
<body>
    <div class="full">
    <div class="content">
    <h1 class="header"> TUDO APP</h1>
    <form action="/create-detail" method="post">
        <hr>
        <div>
        <label for="des">DESCRIBTION:</label><br>
        <input class="text" type="text"name="name" placeholder="What you need to do?" required><br></div>
        <hr>
        <label for="des">CATOGRY:</label><br>
        <select class="Catogry" name="Catogry" id="Catogry" required>
            <option class="option" value="head">Choose a Catogry&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
            <option value="personsal">Personal</option>
            <option value="work">Work</option>
            <option value="Student">Student</option>
            <option value="none">Staff</option>
        </select>
        <div class="ver"></div>
        <div class="sub-date">
        <label  for="date">Due Date</label><br>
        <input class="date" style="font-size: 20px;" type="date" id="date" name="date" required>
    </div>
        <hr>
        <button class="task"><i class="fa-solid fa-plus"></i>ADD TASK</button></div>
</form>
<form action="/delete" method="get">
        <button class="delete" id="delete"><i class="fa-solid fa-trash"></i>DELETE TASK</button><hr>
    </form>

        
    
    
    <div class="detail_list">
        <ul >
            <% for(let i of details){%>
                <li class="list">
                    <div class="sub-list" name="sub-list">
                        <p>  <%= i.name%></p>
                        <p><i class="fa-regular fa-calendar"></i>  <%= i.date%></p>
                        <p class="sub-catogry"> <%= i.Catogry%></p>
                        <input type="checkbox" name="checkbox" id="checkbox">
                        
                    </div>

                </li>
                <hr>
           <% } %>
                
        </ul>
    
        </div>
    </div>
<script src="/js/out.js"></script>
</body>

</html>